<div class="row text-center">
  <h1>Classrooms</h1>
</div>
<div class="row">
  <div class="small-10 small-centered columns">
    <div class="row">
      <div class="small-4 columns">
          <ul>
            {{#each}}
              <li>{{#link-to 'assignments' id }}{{title}}{{/link-to}}</li>
            {{/each}}
          </ul>
      </div>
      <div class="small-4 columns">
        {{ outlet assignments }}
      </div>
      <div class="small-4 columns">
        {{ outlet responses }}
      </div>
    </div>
  </div>
</div>

